extends layout
 
block content
  link(rel='stylesheet', href='/stylesheets/admin.css')
  h3 Пользователи:
  table(cols = "8", border = "2" )
    tr
      td Аватар
      td Фамилия
      td Имя
      td Учреждение
      td Почта
      td Логин
      td Пароль
      td.delete Удалить
  table(cols = "8", border = "2" )
    form
      each user in users
        tr 
          td
            img(src = user.avatar) 
            br
            button.delete Изменить
          td 
            input.user(type = 'text' value = user.name)
          td 
            input.user(type = 'text' value = user.surname)
          td 
            input.user(type = 'text' value = user.institution)
          td 
            input.user(type = 'text' value = user.email)
          td 
            input.user(type = 'text' value = user.login)
          td 
            input.user(type = 'text' value = user.password)
          td.delete 
            button.delete Удалить
  button.finish Добавить пользователя
  
  .pictograms
    h3 Вопросы:
      br
      each pictogram in questions
        .box
          img.pict(src= '/stylesheets/pictograms/questions/' + pictogram.link + '.png')
          button.dpict Удалить        
      .box
        button.dpict Добавить
      
  .pictograms
    h3 Ответы: 
      br
      each pictogram in answers
        .box
          img.pict(src= '/stylesheets/pictograms/answers/' + pictogram.link + '.png')
          button.dpict Удалить        
      .box
        button.dpict Добавить
      
  .pictograms
    h3 Стикеры:
      br
      each pictogram in stickers
        .box
          img.pict(src= '/stylesheets/pictograms/stickers/' + pictogram.link + '.png')
          button.dpict Удалить        
      .box
        button.dpict Добавить
      
  .pictograms
    h3 Загруженное:
      br
      each pictogram in downloads
        .box
          img.pict(src= '/stylesheets/pictograms/downloads/' + pictogram.link + '.png')
          button.dpict Удалить        
      .box
        button.dpict Добавить
      
  .footer
    button.finish Сбросить изменения
    button.finish Сохранить изменения